<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.goldrushtrail">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissionsds for the 'MyLocation' functionality.
    -->
    <!--
     The following two permissions are not required to use
     Google Maps Android API v2, but are recommended.
    -->
    <!-- TODO: Make sure the android manifest & gradle have the DEBUGGABLE parameter set to FALSE on release -->

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/grt_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/grt_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".LocationDetailActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".TourDetailActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NavigationDrawerActivity"
            android:label="@string/title_goldcoastlocation_list"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".locations.NavigationItemHelpActivity"
            android:label="Help"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".NavigationItemAboutActivity"
            android:label="@string/title_activity_navigation_item_about"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".NavigationItemHelpActivity"
            android:label="@string/title_activity_navigation_item_help"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".NavigationItemDevelopersActivity"
            android:label="@string/title_activity_navigation_item_developers"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>